{% extends 'base.html.twig' %}

{% block title %}Défis - CreativeHub
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-main py-8">
		<div class="container-main">
			{% include "partials/_messages.html.twig" %}
			<!-- En tête -->
			<div class="mb-8">
				<h1 class="text-4xl text-gray-900 mb-2">Tous les défis</h1>
				<p class="text-gray-600">Découvrez et participez aux défis créatifs de la communauté.</p>
			</div>

			{# systeme de tri et filtre  #}
			<div class="card-sm p-6 mb-8">
				<form class="flex flex-col md:flex-row gap-4" action="{{ path('app_challenge_index') }}" method="get">
					<div
						class="flex-1">
						{# filtre de categorie #}
						<label for="category" class="form-label">
							Catégorie
						</label>
						<select name="category" id="category" class="form-select" onchange="this.form.submit()">
							<option value="0" {{ selectCategory == 0 ? 'selected' : '' }}>Toutes les catégories</option>
							{% for category in categories %}
								<option value="{{ category.id }}" {{ selectCategory == category.id ? 'selected' : '' }}>
									{{ category.label }}
								</option>
							{% endfor %}
						</select>
					</div>
					<div
						class="flex-1">
						{# tri #}
						<label class="form-label" for="sort">Trier par</label>
						<select name="sort" id="sort" class="form-select" onchange="this.form.submit()">
							<option value="recent" {{ selectSort == 'recent' ? 'selected' : '' }}>Plus récents</option>
							<option value="popular" {{ selectSort == 'popular' ? 'selected' : '' }}>Plus populaires</option>
							<option value="oldest" {{ selectSort == 'oldest' ? 'selected' : '' }}>Plus anciens</option>
						</select>
					</div>

					{# bouton de reinitialisation  #}
					{% if selectCategory != 0 or selectSort != 'recent' %}
						<div class="flex items-end">
							<a href="{{ path('app_challenge_index') }}" class="px-4 py-2 transition-colors link-nav">
								Réinitialiser
							</a>
						</div>
					{% endif %}

				</form>
			</div>

			<!-- Liste des challenges -->
			{% if challenges|length > 0 %}
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{% for challenge in challenges %}
						<div
							class="card-hover overflow-hidden flex flex-col">
							<!-- Image du challenge -->
							<a class="block" href="{{ path('app_challenge_show', {id: challenge.id}) }}">
								{% if challenge.medias|length > 0 %}
									<img class="w-full h-48 object-cover" src="{{ challenge.medias.first.path }}" alt="{{ challenge.title }}">
								{% else %}
									<div class="w-full h-48 gradient-placeholder flex items-center justify-center">
										<svg class="w-16 h-16 text-primary" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
										</svg>
									</div>
								{% endif %}
							</a>

							<!-- contenu de la carte -->
							<div
								class="p-6 flex flex-col flex-1">
								<!-- categorie -->
								<div class="mb-3">
									<span class="badge-category-sm">
										{{ challenge.category.label }}
									</span>
								</div>

								<!-- titre -->
								<h3 class="text-xl text-gray-900 mb-2 line-clamp-2">
									<a class="link-nav transition-all duration-200 hover:underline" href="{{ path('app_challenge_show', {id: challenge.id}) }}">
										{{ challenge.title }}
									</a>
								</h3>

								<!-- description -->
								<p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-1">
									{{ challenge.description|default("Pas de descption") }}
								</p>

								{# informations #}
								<div class="flex items-center justify-between text-sm text-gray-500 mb-4 mt-auto">
									<div class="flex items-center space-x-4">
										<span class="flex items-center">
											<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
											</svg>
											{{ challengeStat[challenge.id].voteCount }}
											vote{{ challengeStat[challenge.id].voteCount > 1 ? 's' : '' }}
										</span>
										<span class="flex items-center">
											<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
											</svg>
											{{ challengeStat[challenge.id].commentCount }}
											commentaire{{ challengeStat[challenge.id].commentCount > 1 ? 's' : '' }}
										</span>
									</div>
								</div>

								{# auteur et date #}
								<div class="flex items-center justify-between pt-4 border-t border-gray-200">
									<div class="flex items-center">
										<div class="avatar-sm mr-2">
											<span class="avatar-initial-sm">
												{{ challenge.user.pseudo|slice(0,1)|upper }}
											</span>
										</div>
										<span class="text-sm text-gray-700">
											{{ challenge.user.pseudo }}
										</span>
									</div>
									<span class="text-xs text-gray-500">
										{{ challenge.createdAt|date('d/m/Y') }}
									</span>
								</div>

								{# Deadline si presente #}

								<div class="mt-3 pt-3 border-t border-gray-100">
									<span class="text-xs text-orange-600 font-medium flex items-center">
										⏰​ Deadline:
										{{ challenge.deadline ? challenge.deadline|date('d/m/Y') : '<svg class="w-5 h-5 ml-3" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m14 9l-.25.375M10 9a5 5 0 1 0 0 6l.334-.5M10 9l4 6a5 5 0 1 0 0-6"/></svg> '}}
									</span>
								</div>


							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				{# message si aucun challenge #}
				<div class="card-sm p-12 text-center">
					<svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>

					<h3 class="text-xl font-semibold text-gray-900 mb-2">Aucun défi trouvé.</h3>
					<p class="text-gray-600 mb-6">
						{% if selectCategory != 0 %}
							Aucun défi dans cette catégorie pour le moment.
						{% else %}
							Aucun défi pour le moment.
						{% endif %}
					</p>
					{% if app.user %}
						<a class="btn-primary-lg inline-flex items-center space-x-2" href="{{ path('app_challenge_new') }}">
							<svg class="icon-with-text" fill="none" stroke="currentColor" viewbox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
							</svg>
							<span>Créer le premier défi</span>
						</a>
					{% endif %}

				</div>

			{% endif %}

		</div>
	</div>

{% endblock %}
